<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">#2e2e2e</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="selectableItemBackground">@color/white</item>
    </style>

    <style name="home_btn_container_style">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/home_btn_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="home_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="near_img_bg">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="home_btn_arr_container_style">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/home_btn_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_btn_arr_style">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@mipmap/arr</item>
    </style>

    <style name="farmset_zhu_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/sub_item_tag_bg_size</item>
        <item name="android:layout_height">@dimen/sub_item_tag_bg_size</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="search_tag_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="order_process_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/order_process_width</item>
        <item name="android:layout_width">@dimen/order_process_width</item>
        <item name="android:background">@drawable/order_process_selected_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="order_process_title_style">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/order_process_title_color</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="dialog_time_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_anim_exit</item>
    </style>

    <style name="order_item_btn_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">80dp</item>
    </style>
    <style name="ptr_style">
        <item name="ptr_duration_to_close">100</item>
        <item name="ptr_duration_to_close_header">100</item>
        <item name="ptr_keep_header_when_refresh">true</item>
        <item name="ptr_pull_to_fresh">false</item>
        <item name="ptr_ratio_of_header_height_to_refresh">1.2</item>
        <item name="ptr_resistance">1.7</item>
    </style>
</resources>
