<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">#2e2e2e</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="selectableItemBackground">@color/white</item>
    </style>

    <style name="home_btn_container_style">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/home_btn_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="home_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="near_img_bg">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="home_btn_arr_container_style">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/home_btn_margin</item>
        <item name="android:layout_marginRight">@dimen/home_btn_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="home_btn_arr_style">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@mipmap/arr</item>
    </style>

    <style name="farmset_zhu_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="search_tag_bg">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
