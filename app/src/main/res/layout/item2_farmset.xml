<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/farmset_price2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/farmset_tag2"
                style="@style/farmset_zhu_bg"
                android:background="@drawable/pin_bg"
                android:text="品"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/farmset_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="青青咖啡厅"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/farmset_context2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双人套餐一份"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/farmset_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="挂牌价：1000"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text" />
    </LinearLayout>

</LinearLayout>