<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="3px"
            android:padding="10dp"
            android:background="@drawable/near_list_bg"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/near_img"
                style="@style/near_img_bg"/>

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/near_area"
                        android:textColor="@color/white"
                        android:background="@drawable/near_area_bg"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:padding="3dp"
                        android:id="@+id/near_name"
                        android:textSize="15sp"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!--<RatingBar-->
                        <!--android:paddingTop="5dp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--style="?android:attr/ratingBarStyleSmall"-->
                        <!--android:rating = "4"-->
                        <!--android:numStars="5"-->
                        <!--android:stepSize = "0.5"-->
                        <!--android:id="@+id/ratingBar" />-->
                </LinearLayout>
                <TextView android:layout_marginTop="10dp"
                android:id="@+id/near_reason"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/km"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:text="1.2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dw"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#A4A4A4"
                    android:background="@drawable/near_km_bg"
                    android:textSize="15sp"
                    android:text="KM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="荐"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>