<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/near_img"
                style="@style/near_img_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/near_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/near_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <!--<RatingBar-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--style="?android:attr/ratingBarStyleSmall"-->
                    <!--android:rating = "4"-->
                    <!--android:numStars="5"-->
                    <!--android:stepSize = "0.5"-->
                    <!--android:id="@+id/ratingBar" />-->
                    <TextView
                        android:id="@+id/Label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginRight="3dp"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/near_label_bg"
                        android:text="标签" />

                    <TextView
                        android:id="@+id/Label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginRight="3dp"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/near_label_bg"
                        android:text="钓鱼" />

                    <TextView
                        android:id="@+id/Label3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginRight="3dp"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/near_label_bg"
                        android:text="太湖边上" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:drawableLeft="@mipmap/location"
                        android:gravity="center_vertical"
                        android:drawablePadding="1dp"
                        android:id="@+id/near_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="#2FAC2F"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/distancen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="1.2km"
                        android:textColor="@color/red"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:background="#FF6600"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginRight="30dp"-->
            <!--android:paddingBottom="8dp"-->
            <!--android:paddingTop="8dp"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:text="荐"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="14sp" />-->
    </RelativeLayout>
</LinearLayout>