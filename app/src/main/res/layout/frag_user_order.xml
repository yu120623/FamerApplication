<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/viewpagertab2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/order_process_seleted_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:stl_clickable="true"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="@color/tab_select2"
        app:stl_defaultTabTextSize="@dimen/user_order_tab_size"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@color/transparent"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/white"
        app:stl_indicatorCornerRadius="15dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="30dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_defaultTabTextHorizontalPadding="6dp"
        app:stl_overlineColor="@color/transparent"
        app:stl_overlineThickness="0dp"
        app:stl_titleOffset="24dp"
        app:stl_underlineColor="@color/transparent"
        app:stl_underlineThickness="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/details_content_view_pager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>